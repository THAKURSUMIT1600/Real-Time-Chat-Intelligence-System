# Environment Configuration
# Copy this file to .env and update values for production

# Flask Settings
SECRET_KEY=your-secret-key-change-in-production
FLASK_ENV=development
FLASK_DEBUG=True

# Database
# For SQLite (development)
DATABASE_URL=sqlite:///chat_intelligence.db

# For PostgreSQL (production)
# DATABASE_URL=postgresql://username:password@localhost:5432/chat_intelligence

# ML Models
EMOTION_MODEL=j-hartmann/emotion-english-distilroberta-base
SPACY_MODEL=en_core_web_sm
USE_ONNX=False

# Rate Limiting
RATE_LIMIT_MESSAGES=10/minute

# Analytics
ANALYTICS_UPDATE_INTERVAL=2
MAX_RECENT_MESSAGES=100

# Server
HOST=0.0.0.0
PORT=5000

# Logging
LOG_LEVEL=INFO
